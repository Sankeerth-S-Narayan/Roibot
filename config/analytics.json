{
  "rolling_window_seconds": 300,
  "update_frequency_seconds": 1.0,
  "max_metrics_per_category": 1000,
  "kpi_calculation_timeout_ms": 100,
  "enable_performance_monitoring": true,
  "enable_debug_mode": false,
  "categories": {
    "order_processing": {
      "enabled": true,
      "metrics": [
        "orders_per_hour",
        "avg_order_time", 
        "completion_rate",
        "queue_length",
        "throughput"
      ]
    },
    "robot_performance": {
      "enabled": true,
      "metrics": [
        "utilization",
        "efficiency",
        "idle_time",
        "movement_distance",
        "path_optimization_savings"
      ]
    },
    "inventory_management": {
      "enabled": true,
      "metrics": [
        "stock_levels",
        "availability",
        "turnover",
        "item_collected",
        "inventory_updates"
      ]
    },
    "system_performance": {
      "enabled": true,
      "metrics": [
        "response_time",
        "memory_usage",
        "throughput",
        "calculation_performance"
      ]
    }
  },
  "data_export": {
    "enabled": true,
    "formats": ["csv", "json"],
    "auto_export_interval_seconds": 60
  },
  "memory_management": {
    "max_metrics_per_session": 10000,
    "cleanup_interval_seconds": 30,
    "enable_auto_cleanup": true
  },
  "integration": {
    "event_driven": true,
    "polling_interval_seconds": 1.0,
    "enable_real_time_updates": true
  }
} 